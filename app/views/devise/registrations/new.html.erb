<div class="container" style="margin-top:15px;">
  <div class="col-sm-12">
    <div class="row">
      <div style="margin-bottom:0" class="panel panel-default">
        <div class="panel-heading">
          <span style="color:#333333; "> <strong>Welcome, Please Sign up.. </strong></span>
        </div>
        <div class="panel-body" style=" font-size:12px;">
          <div class="col-sm-6 col-sm-push-6">
            <div class="form-container">
             <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <%= f.label :name %><br>
                  <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Name", required: true %>
                </div>
                
                <div class="form-group">
                  <%= f.label :email %><br>
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", required: true %>
                </div>

                <div class="form-group">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br/>
                  <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirm Password" %>
                </div>

                <div class="form-group">
                  <%= f.label :user_type %>
                  <%= f.select :user_type, options_for_select([["Owner", "owner"], ["Contractor", "contractor"]]), class: "form-control" %>
                </div>

                <div class="text-center">
                  <a href="/users/sign_in" class="btn btn-warning btn-md" style="color:#fff;">Login</a>
                  <button action="create" class="btn btn-primary" method="post" type="submit"><%= t(:sign_up) %></button>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-sm-6 col-sm-pull-6 hidden-xs">
            <img class="img-responsive" src="/assets/left.png" alt="construction">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
